@model Semana09ASPNet.Models.Contribuyente

@{
    ViewBag.Title = "Nuevo";
}

<h3>NUEVO CONTRIBUYENTE</h3>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.dnicont, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.dnicont, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dnicont, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nomcont, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.nomcont, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomcont, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.apecont, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.apecont, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.apecont, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dircont, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.dircont, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dircont, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Distrito", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-5">
            @Html.DropDownList("iddis", (SelectList)ViewBag.distritos, null, new {@class="form-control custom-select" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Nuevo", "Nuevo", null, new { @class = "btn btn-secondary" })
            <input type="submit" value="Create" class="btn btn-success col-4" />
            @Html.ActionLink("Regresar", "Home", null, new { @class = "btn btn-link" })
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    if ('@ViewBag.mensaje' != "") alert('@ViewBag.mensaje')
</script>
